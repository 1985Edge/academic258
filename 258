  <script>
    const form = document.getElementById('formComentario');
    const comentarios = document.querySelector('.comentarios');

    // Carregar coment√°rios salvos
    window.onload = () => {
      const salvos = JSON.parse(localStorage.getItem('comentariosExtra')) || [];
      salvos.forEach(c => {
        const div = document.createElement('div');
        div.className = 'comentario';
        div.innerHTML = `<p><strong>${c.nome}</strong>: ${c.texto}</p>`;
        comentarios.appendChild(div);
      });
    };

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const nome = document.getElementById('nome').value;
      const texto = document.getElementById('comentario').value;

      const novo = { nome, texto };
      const salvos = JSON.parse(localStorage.getItem('comentariosExtra')) || [];
      salvos.push(novo);
      localStorage.setItem('comentariosExtra', JSON.stringify(salvos));

      const div = document.createElement('div');
      div.className = 'comentario';
      div.innerHTML = `<p><strong>${nome}</strong>: ${texto}</p>`;
      comentarios.appendChild(div);

      form.reset();
    });

    // === Contador Regressivo com persist√™ncia ===
    function iniciarContador() {
      const tempoRestanteEl = document.getElementById('tempoRestante');
      let fimOferta = localStorage.getItem('fimOferta');

      if (!fimOferta) {
        const agora = new Date();
        agora.setMinutes(agora.getMinutes() + 40); // 40 minutos
        fimOferta = agora.getTime();
        localStorage.setItem('fimOferta', fimOferta);
      }

      const intervalo = setInterval(() => {
        const agora = new Date().getTime();
        const diferenca = fimOferta - agora;

        if (diferenca <= 0) {
          tempoRestanteEl.textContent = 'Expirada!';
          clearInterval(intervalo);
          return;
        }

        const minutos = Math.floor((diferenca % (1000 * 60 * 60)) / (1000 * 60));
        const segundos = Math.floor((diferenca % (1000 * 60)) / 1000);

        tempoRestanteEl.textContent = `${minutos}m ${segundos}s`;
      }, 1000);
    }

    iniciarContador();
  </script>

